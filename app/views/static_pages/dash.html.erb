<% provide(:title, "Dash") %>

<h1>Realtime Dashboard</h1>
  <!-- Dash of the app -->
  <div class="row center">
    <div class="col-md-4 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">Total Wankytimes:</div>
        <div class="panel-body">
          <span class="count"><%= Micropost.all.count %></span>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Total Wankyusers:</div>
        <div class="panel-body">
          <span class="count"><%= User.all.count %></span>
        </div>
      </div>
    </div>
    
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">Wanky Map:</div>
        <div class="panel-body">
          <p></p><span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span> Your map's coming soon!</p>
        </div>
      </div>
    </div> 
    
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">Wanky Graph:</div>
        <div class="panel-body">
          <p></p><span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span> Your map's coming soon!</p>
          <%= line_chart User.group_by_day(:created_at).count %>
        </div>
      </div>
    </div> 
  </div>
  
